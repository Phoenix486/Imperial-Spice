@page
@model ImperialSpice.Web.Pages.Admin.MenuItems.IndexModel

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Menu Item List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp;Create New Menu Item
            </a>
        </div>
    </div>
    <br /><br />

    <table id="DT_load" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Food Type</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/menuItem.js"></script>
}